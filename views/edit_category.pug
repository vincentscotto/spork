extend layout

block content
  h1 #{title}
  form(method='post', action='/edit/category/' + category._id)
    label
    input(name='title', type='text', value=category.title)

    label
    textarea(name='description') #{category.description}

    button(class='green', type='submit', name='submit', value='Save') Save
    a(href='/manage/categories') Back

    a(class='delete-category', href='/delete/category/' + category._id, data-cat-id=category._id) Delete
